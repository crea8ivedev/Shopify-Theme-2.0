{% comment %} Story Ethos {% endcomment %}
<section id="ext-two-column-text" class="bg-cream-500 overflow-hidden">
  <div class="wrap wrap--pd py-10">
    <div class="mb-8 border-b">
      <h2 class="h2 font-header uppercase mb-2 text-center md:text-left">{{ section.settings.title_header }}</h2>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-10 md:gap-6 my-10 md:mx-10">
      <div class="md:col-span-2">
        <h4 class="large">{{ section.settings.description }}</h4>
      </div>
      <div class="md:col-span-2 flex flex-col space-y-6">
        {% for i in (1..3) %}
          {% assign block_title = 'block_title_' | append: i %}
          {% assign block_description = 'block_description_' | append: i %}

          {% if section.settings[block_title] != blank %}
            <div class="flex flex-col space-y-2">
              <h3 class="h3 font-header uppercase">{{ section.settings[block_title] }}</h3>
              <p>{{ section.settings[block_description] }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>