
{%- liquid
  assign filtered_selling_plan_groups = product.selling_plan_groups | where: "app_id", "4836205"
-%}
<style>

  /* custom */
  [data-smartrr-price-style] {
    padding-left: 4px;
  }
  
  .smartrr-active{
  	background: #fff;
  }
  
  [data-smartrr-selling-plan-group-plans] {
    display: flex;
    align-items: center;
    margin-left: 2.25rem;
  }
  
  [data-smartrr-selling-plan-group-id] {
    border: 1px solid #000;
    margin-bottom: 1rem;
    font-family: Roboto Mono;
  }
  .smartrr-deliver-frequency{
  	padding: 0px 0px 12px 0;
  }
  
  [data-smartrr-save] {
    background: #3E4B20;
    color: #ffffff;
    padding: 1px 10px;
    display: inline-flex;
    border-radius: 2.5px;
    margin-left: 6px;
    font-size: 0.75rem;
    text-transform: uppercase;
  }
  /* end custom */

  [data-smartrr-compare-price] {
    text-decoration: line-through;
  }
  [data-smartrr-regular-price] {
    text-decoration: line-through;
  }
  
  /*  radio  */
  [data-smartrr-selling-plan-group-input] {
      position: absolute;
      left: -9999px;
  }
  [data-smartrr-selling-plan-group-input] + .smartrr-selling-plan-group-input-display {
      position: relative;
      padding-left: 22px;
      cursor: pointer;
      height: 18px;
      display: inline-block;
      color: var(--c-primary);
  }
  [data-smartrr-selling-plan-group-input] + .smartrr-selling-plan-group-input-display:before {
      content: '';
      position: absolute;
      top: -1px;
      left: 0;
      width: 18px;
      height: 18px;
      border: 1px solid #000;
      border-radius: 100%;
      background: #F7F3ED;
      box-sizing: border-box;
  }
  [data-smartrr-selling-plan-group-input] + .smartrr-selling-plan-group-input-display:after {
      content: '';
      background:#d23425;
      position: absolute;
      width: 10px;
      height: 10px;
      top: 3px;
      left: 4px;
      border-radius: 100%;
      -webkit-transition: all 0.2s ease;
      transition: all 0.2s ease;
    
      opacity: 0;
      -webkit-transform: scale(0);
      transform: scale(0);
  }

  .smartrr-selling-plan-group-label:hover .smartrr-selling-plan-group-input-display:after {
    opacity: 0.3;
    -webkit-transform: scale(1);
    transform: scale(1);
  }
  
  [data-smartrr-selling-plan-group-input]:checked + .smartrr-selling-plan-group-input-display:after {
      opacity: 1;
      -webkit-transform: scale(1);
      transform: scale(1);
  }
  /* end radio */

  [data-smartrr-form-id] .hide {
    display: none;
  }
    
  [data-smartrr-selling-plans-select] {
    padding-top: 6px;
    padding-right: 10px;
    padding-bottom: 6px;
    padding-left: 0;
    width: auto;
    background: 0 0;
    margin: 0px 12px 12px 12px;
    border: none;
    border-bottom: 1px solid var(--c-primary);
  }

  [data-smartrr-form-id] .smartrr-purchase-options {
    border: none;
    margin-top: 0;
    margin-left: 0;
    margin-right: 0;
    margin-bottom: 1rem;
    padding: 0px;
    color: #242424;
  }

  [data-smartrr-form-id] [data-smartrr-selling-plan-group-id] {
    display: flex;
    flex-direction: column;
    column-gap: 0.4rem;
    padding-top: 0.4rem;
  }

  [data-smartrr-form-id] .smartrr-selling-plan-group-label {
    cursor: pointer;
    display: flex;
    column-gap: 0.2rem;
    align-items: center;
    width: 100%;
    padding: 0px 12px 10px 10px;
  }

  [data-smartrr-form-id] .smartrr-selling-plan-group-label--subscribe {
    padding-bottom: 4px;
  }

  [data-smartrr-form-id] [data-smartrr-selling-plan-group-input] {
    min-height: 0;
  }

  [data-smartrr-form-id] .smartrr-selling-plan-group-contents {
    {% if filtered_selling_plan_groups.size <= 1 %}
      margin-left: 1rem;
    {% else %}
      margin-left: 0;
    {% endif %}
  }

  [data-smartrr-form-id] [data-smartrr-selling-plan-group-input]:disabled {
    opacity: 0.7;
  }

  .smartrr-selling-plan-group-name {
    display: inline-flex;
    align-items: center;
    font-size: 16px;
  }

  .smartrr-selling-plan-group-subheadline {
    margin-left: 36px;
    font-size: 12px;
    padding-bottom: 0.4rem;
    position: relative;
  }

  .smartrr-selling-plan-group-popover {
    display: none;
    padding: 16px;
    width: 20rem;
    z-index: 10;
    background: #3E4B20;
    color: #ffffff;
    position: absolute;
    left: -37px;
    margin-top: 10px;
  }

  .smartrr-selling-plan-group-popover-trigger {
    cursor: help;
  }

  .smartrr-selling-plan-group-popover.smartrr-selling-plan-group-popover--shown {
    display: block;
  }

  .smartrr-selling-plan-group-popover::after {
    content: '';
    position: absolute;
    width: 0;
    height: 0;
    border: .625rem solid #3E4B20;
    border-bottom: 0;
    border-left-color: transparent;
    border-right-color: transparent;
    top: -10px;
    right: 135px;
    transform: rotate(180deg);
  }

  .smartrr-selling-plan-group-popover__close {
    position: absolute;
    top: 3px;
    right: 3px;
    z-index: 1;
    cursor: pointer;
  }

  @media screen and (min-width: 640px) {
    .smartrr-selling-plan-group-popover__close {
      display: none;
    }
  }

  [data-smartrr-form-id] [data-smartrr-selling-plan-group-input]:disabled + .smartrr-selling-plan-group-name {
    opacity: 0.65;
  }

</style>
