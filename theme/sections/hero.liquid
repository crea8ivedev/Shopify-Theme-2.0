          "value": "flip-up",
          "label": "Flip up"
        },
        {
          "group": "Flip",
          "value": "flip-down",
          "label": "Flip down"
        },
        {
          "group": "Flip",
          "value": "flip-left",
          "label": "Flip left"
        },
        {
          "group": "Flip",
          "value": "flip-right",
          "label": "Flip right"
