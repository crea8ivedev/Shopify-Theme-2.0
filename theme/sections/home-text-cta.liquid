<style>
  #home-text-cta-{{ section.id }} {
    background: {{ section.settings.bg_color }};
  }

  #home-text-cta-{{ section.id }} p {
    color: {{ section.settings.text_color }};
  }
</style>

<section id="home-text-cta-{{ section.id }}" class="text-cta section text-cta--{{ section.id }} py-16">
  <div class="copy copy--pd flex flex-col items-center m-auto text-center" {% if section.settings.enable_animations %}data-aos="{{ section.settings.animation_style }}" data-aos-duration="{{ section.settings.animation_duration }}"{% endif %}>
    <p class="h4">{{ section.settings.text }}</p>
    {% if section.settings.cta_link and section.settings.cta_label %}
      <div class="mt-10">
        <a href="{{ section.settings.cta_link }}" class="{{ section.settings.cta_type }}">{{ section.settings.cta_label }}</a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Text CTA Block",
    "class": "section-text-cta",
    "settings": [
      {
        "type": "header",
        "content": "Background"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Backgorund Color",
        "default": "#3E4B20"
      },
      {
        "type": "header",
        "content": "Text"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text",
        "default": "Enter text here"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color",
        "default": "#ffffff"
      },
      {
        "type": "header",
        "content": "CTA"
      },
      {
        "type": "text",
        "id": "cta_label",
        "label": "CTA label",
        "default": "Learn more"
      },
      {
        "type": "url",
        "id": "cta_link",
        "label": "CTA link"
      },
      {
        "type": "select",
        "id": "cta_type",
        "label": "CTA type",
        "options": [
          {
            "value": "btn",
            "label": "Primary"
          },
          {
            "value": "btn btn--secondary",
            "label": "Secondary"
          }
        ],
        "default": "btn"
      },
      {
        "type": "header",
        "content": "Animations"
      },
      {
        "type": "checkbox",
        "id": "enable_animations",
        "label": "Enable Animations",
        "default": false
      },
      {
        "type": "select",
        "id": "animation_style",
        "label": "Animation Style",
        "options": [
          {
            "group": "Fade",
            "value": "fade-up",
            "label": "Fade up"
          },
          {
            "group": "Fade",
            "value": "fade-down",
            "label": "Fade down"
          },
          {
            "group": "Fade",
            "value": "fade-left",
            "label": "Fade left"
          },
          {
            "group": "Fade",
            "value": "fade-right",
            "label": "Fade right"
          },
          {
            "group": "Flip",
            "value": "flip-up",
            "label": "Flip up"
          },
          {
            "group": "Flip",
            "value": "flip-down",
            "label": "Flip down"
          },
          {
            "group": "Flip",
            "value": "flip-left",
            "label": "Flip left"
          },
          {
            "group": "Flip",
            "value": "flip-right",
            "label": "Flip right"
          }
        ],
        "default": "fade-up"
      },
      {
        "type": "range",
        "id": "animation_duration",
        "min": 100,
        "max": 1000,
        "step": 50,
        "unit": "ms",
        "label": "Animation Duration (ms)",
        "default": 300
      }
    ],
    "presets": [
      {
        "name": "CTA Block",
        "category": "Text"
      }
    ]
  }
{% endschema %}
