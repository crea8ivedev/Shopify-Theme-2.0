<style>
  /* stylelint-disable */
  @media (min-width: 768px) {
    #hero--{{ section.id }} .hero__content-block {
      background: rgba(255, 255, 255, {{ section.settings.background_opacity }});
    }
  }
  /* stylelint-enable */
</style>

<section id="hero--{{ section.id }}" class="hero {% if section.settings.full_height %} hero--full{% endif %} relative bg-gray-200">
  {% if section.settings.image != blank %}
    {% assign desktop_class = 'hero__image hidden md:block' %}
    {%- if section.settings.image_mobile != blank -%}
      {% assign desktop_class = desktop_class | append: ' hidden' %}
    {% endif %}
    {% include 'responsive-image' with image: section.settings.image, image_class: desktop_class %}
  {% else %}
    {{ 'image' | placeholder_svg_tag: 'placeholder-svg hero__image' }}
  {%- endif -%}
  {%- if section.settings.image_mobile != blank %}
    {% include 'responsive-image' with image: section.settings.image_mobile, image_class: 'hero__image hero__image--mobile md:hidden' %}
  {%- endif -%}

  <div class="hero__content wrap wrap--pd mx-auto {{ section.settings.horizontal_position }} {{ section.settings.vertical_position }}">
    <div class="hero__content-block">
      {%- if section.settings.title != blank -%}
        <h1 class="h1 font-header mb-6">{{ section.settings.title }}</h1>
      {%- endif -%}
      {%- if section.settings.text != blank -%}
        <div class="large">
          {{ section.settings.text }}
        </div>
      {%- endif -%}
      {%- if section.settings.button_label != blank -%}
        <div class="mt-8"><a href="{{ section.settings.button_link }}" class="{{ section.settings.button_type }}">{{ section.settings.button_label }}</a></div>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image (Mobile)"
    },
    {
      "type": "checkbox",
      "id": "full_height",
      "label": "Full height",
      "info": "Adjust to the full height of the browser window. Image cropping occurs from the center. Does not apply to small screens.",
      "default": false
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Hero Title"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "button_type",
      "label": "Button Type",
      "options": [
        {
          "value": "btn",
          "label": "primary"
        },
        {
          "value": "btn btn--secondary",
          "label": "secondary"
        }
      ],
      "default": "btn"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "select",
      "id": "horizontal_position",
      "label": "Horizontal position",
      "default": "hero__content--left",
      "options": [
        {
          "label": "Left",
          "value": "hero__content--left"
        },
        {
          "label": "Center",
          "value": "hero__content--center"
        },
        {
          "label": "Right",
          "value": "hero__content--right"
        }
      ]
    },
    {
      "type": "select",
      "id": "vertical_position",
      "label": "Vertical position",
      "default": "hero__content--top",
      "options": [
        {
          "label": "Top",
          "value": "hero__content--top"
        },
        {
          "label": "Middle",
          "value": "hero__content--middle"
        },
        {
          "label": "Bottom",
          "value": "hero__content--bottom"
        }
      ]
    },
    {
      "type": "select",
      "id": "background_opacity",
      "label": "Background Opacity",
      "default": "0.5",
      "options": [
        {
          "label": "90%",
          "value": "0.9"
        },
        {
          "label": "80%",
          "value": "0.8"
        },
        {
          "label": "70%",
          "value": "0.7"
        },
        {
          "label": "60%",
          "value": "0.6"
        },
        {
          "label": "50%",
          "value": "0.5"
        },
        {
          "label": "40%",
          "value": "0.4"
        },
        {
          "label": "30%",
          "value": "0.3"
        },
        {
          "label": "20%",
          "value": "0.2"
        },
        {
          "label": "10%",
          "value": "0.1"
        },
        {
          "label": "0%",
          "value": "0"
        }
      ]
    }
  ]
}
{% endschema %}