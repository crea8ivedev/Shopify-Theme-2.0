<div id="page-faqs" class="bg-cream-500">
  <div class="copy copy--pd copy--wide py-20">
    <div class="text-center">
      <h1 class="h2 uppercase font-header mb-6">{{ page.title }}</h1>
      <p class="large">{{ page.content }}</p>
    </div>
    <div class="page-faqs__blocks mt-20">
      {% section 'page-faq-block-1' %}
      {% section 'page-faq-block-2' %}
      {% section 'page-faq-block-3' %}
    </div>
  </div>
  {% section 'page-faq-background' %}
</div>

<script>
  const accordionSections = document.querySelectorAll('.accordion-section');

  if (accordionSections) {
    accordionSections.forEach((accordionSection) => {
      accordionSection.addEventListener('click', (event) => {
        const group = event.target.closest('.accordion-section');

        if (group.classList.contains('accordion-section--on')) {
          group.classList.remove('accordion-section--on');
        } else {
          accordionSections.forEach((acc) => {
            acc.classList.remove('accordion-section--on');
          });

          group.classList.add('accordion-section--on');
        }
      });
    })
  }
</script>
